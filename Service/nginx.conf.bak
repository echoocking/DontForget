# simple nginx conf bak
server {
    listen 80;
    access_log  /home/....log;

    # 白名单
    allow ***.***.2.158;    # 本地公网地址
    allow ***.***.237.238;    # 后台内网地址
    deny all;

    location / {
        proxy_pass http://frontends;
        proxy_pass_header Server;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
    }
}